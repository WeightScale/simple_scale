<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/corners"/>
            <stroke android:width="1dip" android:color="@android:color/black"/>
            <solid android:color="#ffa0a0a0"/>
            <!--<gradient
                    android:startColor="#ffb4b4b4"
                    android:centerColor="#ff929292"
                    android:endColor="#ffb4b4b4"
                    android:centerY="0.5"
                    android:angle="270"/>-->

        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="@dimen/corners"/>
                <stroke android:width="1dip" android:color="@android:color/black"/>
                <solid android:color="@color/white"/>
                <!--android:startColor="#ffa1ff95"-->
                <!--android:centerColor="#ff87ff87"-->
                <!--android:endColor="#ffa1ff95"-->
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/corners"/>
                <stroke android:width="1sp" android:color="@android:color/black"/>
                <gradient
                        android:startColor="#ffffd300"
                        android:centerColor="#ffffb600"
                        android:centerY="0.75"
                        android:endColor="#ffffcb00"
                        android:angle="270"/>
            </shape>
        </clip>
    </item>

</layer-list>